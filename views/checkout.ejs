<%- include('partials/header', { title: 'Checkout' , page: 'shop' }) %>

    <!-- breadcrumb -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4"> Checkout </span>
        </div>
    </div>

    <!-- Checkout Form -->
    <form class="bg0 p-t-75 p-b-85" action="/checkout" method="POST">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <h4 class="mtext-109 cl2 p-b-30">Billing Details</h4>

                        <div class="bor8 bg0 m-b-12">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="name"
                                placeholder="Full Name" required>
                        </div>

                        <div class="bor8 bg0 m-b-12">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="address"
                                placeholder="Address" required>
                        </div>

                        <div class="bor8 bg0 m-b-12">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="email" name="email"
                                placeholder="Email Address" required>
                        </div>

                        <div class="bor8 bg0 m-b-12">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="tel" name="phone"
                                placeholder="Phone Number" required>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">Your Order</h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
                                <span class="stext-110 cl2"> Product </span>
                            </div>
                            <div class="size-209">
                                <span class="stext-110 cl2"> Total </span>
                            </div>
                        </div>

                        <% if (typeof cart !=='undefined' ) { %>
                            <% cart.forEach(function(item) { %>
                                <div class="flex-w flex-t p-b-13">
                                    <div class="size-208">
                                        <span class="stext-111 cl6">
                                            <%= item.title %> x <%= item.quantity %>
                                        </span>
                                    </div>
                                    <div class="size-209">
                                        <span class="stext-111 cl6"> $<%= (item.price * item.quantity).toFixed(2) %>
                                        </span>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } %>

                                        <div class="flex-w flex-t p-t-27 p-b-33">
                                            <div class="size-208">
                                                <span class="mtext-101 cl2"> Total: </span>
                                            </div>

                                            <div class="size-209 p-t-1">
                                                <span class="mtext-110 cl2">
                                                    $<%= typeof total !=='undefined' ? total : '0.00' %>
                                                </span>
                                            </div>
                                        </div>

                                        <button
                                            class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                            Place Order
                                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <%- include('partials/footer') %>