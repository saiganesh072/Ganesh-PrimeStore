<%- include('partials/header', { title: 'Order Confirmation' , page: 'shop' }) %>

    <!-- breadcrumb -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>
            <span class="stext-109 cl4"> Order Confirmation </span>
        </div>
    </div>

    <!-- Order Confirmation -->
    <section class="bg0 p-t-75 p-b-120">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm text-center">
                            <i class="zmdi zmdi-check-circle fs-100 cl3 m-b-20" style="color: #28a745;"></i>
                            <h4 class="mtext-109 cl2 p-b-15">Thank You For Your Order!</h4>
                            <p class="stext-115 cl6 p-b-20">
                                Your order has been placed successfully.
                            </p>

                            <div class="bor12 p-t-20 p-b-20 m-b-20 text-left">
                                <p class="mtext-101 cl2">Order ID: <span class="cl3">#<%= order.id %></span></p>
                                <p class="stext-110 cl2">Date: <%= new Date(order.createdAt).toLocaleDateString() %>
                                </p>
                                <p class="stext-110 cl2">Status: <%= order.status %>
                                </p>
                            </div>

                            <div class="bor12 p-t-20 p-b-20 m-b-20 text-left">
                                <h5 class="mtext-101 cl2 m-b-10">Billing Details</h5>
                                <p class="stext-110 cl6">
                                    <%= order.name %>
                                </p>
                                <p class="stext-110 cl6">
                                    <%= order.address %>
                                </p>
                                <p class="stext-110 cl6">
                                    <%= order.email %>
                                </p>
                                <p class="stext-110 cl6">
                                    <%= order.phone %>
                                </p>
                            </div>

                            <h5 class="mtext-101 cl2 m-b-20 text-left">Order Summary</h5>
                            <div class="wrap-table-shopping-cart">
                                <table class="table-shopping-cart">
                                    <tr class="table_head">
                                        <th class="column-1">Product</th>
                                        <th class="column-2"></th>
                                        <th class="column-3">Price</th>
                                        <th class="column-4">Quantity</th>
                                        <th class="column-5">Total</th>
                                    </tr>

                                    <% order.items.forEach(function(item) { %>
                                        <tr class="table_row">
                                            <td class="column-1">
                                                <div class="how-itemcart1">
                                                    <img src="/<%= item.product ? item.product.image : 'images/item-cart-01.jpg' %>"
                                                        alt="IMG">
                                                </div>
                                            </td>
                                            <td class="column-2">
                                                <%= item.product ? item.product.title : 'Unknown Product' %>
                                            </td>
                                            <td class="column-3">$ <%= item.price %>
                                            </td>
                                            <td class="column-4">
                                                <%= item.quantity %>
                                            </td>
                                            <td class="column-5">$ <%= (item.price * item.quantity).toFixed(2) %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </table>
                            </div>

                            <div class="flex-w flex-t p-t-27 p-b-33">
                                <div class="size-208">
                                    <span class="mtext-101 cl2"> Total Paid: </span>
                                </div>

                                <div class="size-209 p-t-1">
                                    <span class="mtext-110 cl2">
                                        $<%= order.total_amount ? order.total_amount.toFixed(2) : '0.00' %>
                                    </span>
                                </div>
                            </div>

                            <a href="/shop"
                                class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>